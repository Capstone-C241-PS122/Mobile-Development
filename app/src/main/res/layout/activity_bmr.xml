<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.myBody.ActivityBMR">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="start"
                    android:background="@drawable/arrow_back_24px"/>
                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="80dp"
                    android:layout_gravity="end"
                    android:background="@drawable/refresh_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/bmr_header"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/top_bar"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="bottom"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
                <EditText
                    android:id="@+id/etHeight"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:paddingStart="8dp"
                    android:textColor="@color/colorTextgrey"
                    android:layout_marginTop="16dp"
                    android:textColorHint="@color/colorTextHint"
                    android:background="@drawable/background_input"
                    android:hint="@string/enter_your_height_cm"
                    android:inputType="numberDecimal"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/etWeight"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:paddingStart="8dp"
                    android:textColor="@color/colorTextgrey"
                    android:layout_marginTop="16dp"
                    android:textColorHint="@color/colorTextHint"
                    android:background="@drawable/background_input"
                    android:hint="@string/enter_your_weight_kg"
                    android:inputType="numberDecimal"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/etAge"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:paddingStart="8dp"
                    android:textColor="@color/colorTextgrey"
                    android:layout_marginTop="16dp"
                    android:textColorHint="@color/colorTextHint"
                    android:background="@drawable/background_input"
                    android:hint="@string/enter_your_age"
                    android:padding="8dp"/>
                <Spinner
                    android:id="@+id/etGender"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:paddingStart="10dp"
                    android:background="@drawable/background_input"
                    android:layout_height="58dp" />

                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_light"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/background"
                    android:text="@string/calculate"
                    android:elevation="10dp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/resultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_margin="30dp"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"/>
        </LinearLayout>
</FrameLayout>