<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="450dp">
                <ImageView
                    android:id="@+id/resultImage"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/example_input" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:background="@drawable/view_gradient_detail" />

                <TextView
                    android:id="@+id/idNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:text="" />

            </FrameLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_reguler"
                android:textColor="@color/colorTextDescription"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:text="@string/video_tutorial"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="220dp"/>

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/play_circle_24px" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/name_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/body_part"
                    android:textSize="18sp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorTextDescription"/>
                <TextView
                    android:id="@+id/bodyPart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_reguler"
                    android:textColor="@color/colorTextDescription"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/capstone_c241_ps122"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorTextgrey2"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/background"
            android:elevation="4dp"
            android:visibility="invisible"
            app:layout_anchor="@id/appBarLayout"
            app:layout_anchorGravity="bottom" />
    </FrameLayout>
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:src="@drawable/close_24px"
        android:scaleType="fitXY"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="start|top" />
    <TextView
        android:id="@+id/tvtopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_exercise"
        android:fontFamily="@font/roboto_medium"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:textSize="21sp"
        android:visibility="invisible"
        android:textColor="@color/colorTextgrey"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="end|top"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
