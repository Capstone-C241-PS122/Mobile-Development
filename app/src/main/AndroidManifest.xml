        <activity
            android:name=".ui.ActivityCalculateNutrition"
            android:exported="false" />
        <activity
            android:name=".ui.ActivityHydration"
            android:exported="false" />
        <activity
            android:name=".ui.ActivityBMR"
            android:exported="false" />
        <activity
            android:name=".ui.ActivityBMI"
            android:exported="false" />
        <activity
            android:name=".ui.FeedbackActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LibraryVideo"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectExercise"
            android:exported="false"
            android:screenOrientation="portrait" />
