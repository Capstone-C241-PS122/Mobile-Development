<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_background_rounded"
    android:elevation="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/bg_card2">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="Partner plank band row"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:text="The partner plank band row is an abdominal exercise..."
                android:maxLines="2"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_reguler"
                android:textColor="@color/colorTextgrey" />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
