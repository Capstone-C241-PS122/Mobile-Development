<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@color/background">
    <ImageView
        android:id="@+id/imgResult"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/example_input"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/06/2024"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorTextgrey"/>
        <TextView
            android:id="@+id/tvNameExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Hacksquat"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvBodyPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="15dp"
            android:text="Body part: Biceps"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_reguler"
            android:textColor="@color/colorTextgrey"/>
        <TextView
            android:id="@+id/tvHackSquat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginStart="15dp"
            android:text="Equiqment: Hacksquat Machine"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_reguler"
            android:textColor="@color/colorTextgrey"/>
    </FrameLayout>
</LinearLayout>